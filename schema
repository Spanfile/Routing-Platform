interfaces {
    [query: ls /sys/class/net] ethernet <query> {
        [values: !ipv4,dhcp] address
        [
            values: 10,100,1000,negotiate
            initial: query: ls /sys/class/net/<query>/speed
        ] speed
        [
            values: half,full,negotiate
            initial: query: ls /sys/class/net/<query>/duplex
        ] duplex
        [
            values: !mac,
            initial: query: ls /sys/class/net/<query>/address
        ] hardware
        [
            values: 1-9000
            initial: query: ls /sys/class/net/<query>/address
        ] mtu
    }
}